// Get all the links.
	var link = $(".sidebar-menu> li > a");
	// On clicking of the links do something.
	link.on('click', function(e) {
		e.preventDefault();
		var a = $(this).attr("href");
		$(a).slideDown('slow');
		//$(a).slideToggle('fast');
		$(".sidebar-menu ul").not(a).slideUp('slow');		
	});